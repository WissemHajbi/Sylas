<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark"
        tools:context=".MainActivity8">

        <ImageView
            android:id="@+id/storycover1"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/theshacklesofbelief"
            app:layout_constraintEnd_toStartOf="@id/storycover2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/storycover2"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/recruit"
            app:layout_constraintEnd_toStartOf="@id/storycover3"
            app:layout_constraintStart_toEndOf="@id/storycover1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/storycover3"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/turmoil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/storycover2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/shacklestitle"
            android:textColor="#FFD999"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/storycover2" />

        <TextView
            android:id="@+id/storytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha="0.6"
            android:lineSpacingExtra="6dp"
            android:padding="20dp"
            android:text="@string/shacklesstory"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storytitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>